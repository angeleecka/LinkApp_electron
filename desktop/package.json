{
  "name": "com.angevicka.linkapp",
  "private": true,
  "version": "0.1.1",
  "description": "LinkApp - Your personal link organizer",
  "author": "Angevicka Bond",
  "main": "electron-main.mjs",
  "type": "module",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder",
    "build:win": "electron-builder --win",
    "build:mac": "electron-builder --mac",
    "build:linux": "electron-builder --linux",
    "build:dev": "electron-builder --config.productName='LinkApp Dev'"
  },
  "build": {
    "appId": "com.angevicka.linkapp",
    "productName": "LinkApp",
    "directories": {
      "output": "dist",
      "buildResources": "assets",
      "win": {
        "icon": "assets/icon.ico"
      },
      "linux": {
        "icon": "assets/icon.png"
      },
      "app": ".."
    },
    "files": [
      "desktop/electron-main.mjs",
      "desktop/preload.cjs",
      "index.html",
      "assets/**/*",
      "core/**/*",
      "ui/**/*",
      "platform/**/*",
      "main.js",
      "favicon.png",
      "!desktop/dist/**/*",
      "!.git/**/*",
      "!node_modules/**/*"
    ],
    "extraMetadata": {
      "main": "desktop/electron-main.mjs"
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64",
            "ia32"
          ]
        },
        {
          "target": "portable"
        }
      ],
      "icon": "assets/icons/logo_512x512.png"
    },
    "mac": {
      "target": [
        "dmg",
        "zip"
      ],
      "icon": "assets/icons/logo_512x512.png",
      "category": "public.app-category.productivity"
    },
    "linux": {
      "target": [
        "AppImage",
        "deb",
        "rpm"
      ],
      "icon": "assets/icons/logo_512x512.png",
      "category": "Utility"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "LinkApp"
    },
    "portable": {
      "artifactName": "LinkApp-Portable.exe"
    }
  },
  "devDependencies": {
    "electron": "^36.9.5",
    "electron-builder": "^25.1.8"
  }
}
